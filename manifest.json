{
  "manifest_version": 3,
  "name": "WireView",
  "version": "3.1.2",
  "description": "Monitor fetch/XHR/WebSocket API calls directly in any webpage or via popup.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["overlay.html", "inject.js", "libs/export.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options/options.html"
}
